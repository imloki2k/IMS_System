@model IMS_System.ModelViews.LoginModelView
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="limiter">
    <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
            <form class="login100-form validate-form" id="login-form" asp-controller="Accounts" asp-action="Login">
                <span class="login100-form-title p-b-49">
                    Login
                </span>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="wrap-input100 validate-input m-b-23" data-validate="Email/MobilePhone is reauired">
                    <span class="label-input100">Username</span>
                    <input asp-for="UserName" type="text" class="input100" placeholder="Type your email/mobilephone">
                    <span class="focus-input100" data-symbol="&#xf206;"></span>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <span class="label-input100">Password</span>
                    <input asp-for="Password" type="password" class="input100" placeholder="Type your password">
                    <span class="focus-input100" data-symbol="&#xf190;"></span>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-right p-t-8 p-b-31">
                    <a href="#">
                        Forgot password?
                    </a>
                </div>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button type="submit" name="login-submit" id="login-submit" class="login100-form-btn">
                            Login
                        </button>
                    </div>
                </div>

                <div class="txt1 text-center p-t-54 p-b-20">
                    <span>
                        Or Sign Up Using
                    </span>
                </div>

                <div class="flex-c-m">
                    <a href="#" class="login100-social-item bg1">
                        <i class="fa fa-facebook"></i>
                    </a>

                    <a href="#" class="login100-social-item bg2">
                        <i class="fa fa-twitter"></i>
                    </a>

                    <a href="#" class="login100-social-item bg3">
                        <i class="fa fa-google"></i>
                    </a>
                </div>

                <div class="flex-col-c p-t-155">
                    <a asp-controller="Accounts" asp-action="Register" class="txt2">
                        Sign Up
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


<div id="dropDownSelect1"></div>


