@model IMS_System.Models.Entities.Subject

@{
    ViewData["Title"] = "Delete Subject";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Update this with the correct layout if needed
}

<h1>Delete Subject</h1>

<h3>Are you sure you want to delete this subject?</h3>
<div>
    <h4>@Model.SubjectName</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SubjectCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SubjectCode)
            </dd>
            <!-- Include other fields if necessary -->
        </dl>
    </div>

    <form asp-action="DeleteSubject">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.SubjectId)
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ManageSubjects" class="btn btn-secondary">Cancel</a>
    </form>
</div>
