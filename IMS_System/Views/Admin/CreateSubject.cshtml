@model IMS_System.Models.Entities.Subject

@{
    ViewData["Title"] = "Create Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Subject</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.SubjectName)
        @Html.EditorFor(model => model.SubjectName)
        @Html.ValidationMessageFor(model => model.SubjectName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SubjectCode)
        @Html.EditorFor(model => model.SubjectCode)
        @Html.ValidationMessageFor(model => model.SubjectCode)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StatusId)
        @Html.DropDownListFor(model => model.StatusId, (SelectList)ViewBag.Statuses, "-- Select Status --")
        @Html.ValidationMessageFor(model => model.StatusId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ClassId)
        @Html.DropDownListFor(model => model.ClassId, (SelectList)ViewBag.Classes, "-- Select Class --")
        @Html.ValidationMessageFor(model => model.ClassId)
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="ManageSubjects" class="btn btn-secondary">Back to List</a>
}


