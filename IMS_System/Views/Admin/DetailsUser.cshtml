@model IMS_System.Models.Entities.User

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Details</h2>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mobile)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Avatar)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        </dd>
    </dl>
</div>
<div>
    <div class="form-group" style="margin-top: 20px">
        <a asp-action="EditUser" class="btn btn-primary" asp-route-id="@Model?.UserId">Edit User</a> |
        <a asp-action="ManageUsers" class="btn btn-secondary">Back to List</a>
    </div>
</div>
